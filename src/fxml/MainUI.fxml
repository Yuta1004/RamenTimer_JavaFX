<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="640.0" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="ラーメンタイマー" textAlignment="CENTER">
         <font>
            <Font name="Hiragino Sans W9" size="40.0" />
         </font>
      </Text>
      <Text fx:id="clockText" strokeType="OUTSIDE" strokeWidth="0.0" text="00:00" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="90.0" />
         </font>
      </Text>
      <HBox alignment="CENTER" prefHeight="70.0" spacing="30.0">
         <children>
            <Button fx:id="plus10Min" mnemonicParsing="false" text="+10分">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button fx:id="plus1Min" mnemonicParsing="false" text="+1分">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button fx:id="plus10Sec" mnemonicParsing="false" text="+10秒">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button fx:id="plus1Sec" mnemonicParsing="false" text="+1秒">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0" spacing="20.0">
         <children>
            <Button fx:id="startButton" mnemonicParsing="false" text="スタート">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button fx:id="stopButton" mnemonicParsing="false" text="ストップ">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
